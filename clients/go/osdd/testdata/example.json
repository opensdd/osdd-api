{
  "entryPoint": {
    "start": {
      "command": "agents_md"
    },
    "workspace": {
      "enabled": true,
      "path": "osdd/workspace/docs_update",
      "unique": {
        "len": 7
      }
    }
  },
  "recipe": {
    "context": {
      "entries": [
        {
          "path": "specs/goal.md",
          "from": {
            "github": {
              "path": "https://github.com/opensdd/recipes/global/agents_md/resources/goal.md"
            }
          }
        },
        {
          "path": "specs/parameters.md",
          "from": {
            "userInput": {
              "entries": [
                {
                  "name": "Repositories to clone",
                  "description": "Comma separated list of repositories to clone"
                },
                {
                  "name": "Instructions",
                  "description": "Additional instructions for an agent to focus on",
                  "optional": true
                }
              ]
            }
          }
        }
      ]
    },
    "ide": {
      "commands": {
        "entries": [
          {
            "name": "agents_md_plan",
            "from": {
              "github": {
                "path": "https://github.com/opensdd/recipes/global/agents_md/resources/plan.md"
              }
            }
          },
          {
            "name": "agents_md",
            "from": {
              "github": {
                "path": "https://github.com/opensdd/recipes/global/agents_md/resources/agents_md.md"
              }
            }
          },
          {
            "name": "agents_md_generate",
            "from": {
              "github": {
                "path": "https://github.com/opensdd/recipes/global/agents_md/resources/generate.md"
              }
            }
          }
        ]
      }
    }
  }
}